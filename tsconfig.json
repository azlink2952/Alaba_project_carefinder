{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": ["cypress"]
  },
  "include": [
    "src/**/*",
    "next-env.d.ts",
    "**/*.ts", "**/*.tsx",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "build/types/**/*.ts"
, "jest.config.js", "firebase"  ],
  "exclude": [
    "node_modules"
  ]
}
